<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#CEF6EC" />
            <gradient  android:angle="-90"  android:startColor="#7faacaFF" android:endColor="#cfe1edFF"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#598e96" />
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#598e96" />
            <solid android:color="@android:color/transparent"/>
            <!-- <gradient  android:angle="-90"  android:startColor="#94dcea" android:endColor="#4ea0ab" /> -->
        </shape>
    </item>
</selector>